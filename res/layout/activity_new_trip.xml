<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    
<!-- enter new name row -->
<TableRow>

    <ImageView
        android:id="@+id/saveImageIcon"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/savePage" />
        
        </TableRow>
    

    <TableRow
        android:id="@+id/tripNameRow"
        android:layout_width="wrap_content"
        android:layout_height="100dp" 
        android:paddingTop="0dp"
        android:paddingBottom="25dp">
        

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <!-- New Trip Title -->
        <TextView
            android:id="@+id/new_trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_large"
            android:text="@string/new_trip_name"
            android:textAppearance="?android:attr/textAppearanceLarge" />
<!-- New Trip name imput -->
        <EditText

            android:id="@+id/newTripName"
            android:inputType="text"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp" />

        </LinearLayout>

    </TableRow>
    
<!-- START Descrpition ROW   --> 
    <TableRow
        android:id="@+id/descriptionRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/new_trip_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_large"
                android:text="@string/new_trip_description"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/newTripDescription"
                android:layout_width="262dp"
                android:layout_height="fill_parent"
                android:inputType="textLongMessage"
                android:paddingLeft="20dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </TableRow>
 
</TableLayout>